{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS Tests File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--async-stack-traces",
        "-r",
        "ts-node/register/transpile-only",
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json",
        "TS_NODE_FILES": "true",
        "DEBUG": "error*,warn*,info*"
      }
    }
  ]
}
